{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "API_TIMEOUT_MS": "3000000",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1"
  },
  "permissions": {
    "allow": [
      "Bash"
    ]
  },
  "model": "opus",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/korean-branch-trigger.py"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"event\":\"notification\",\"cwd\":\"'\"$PWD\"'\"}' | ~/.claude/hooks/notify.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"event\":\"stop\",\"cwd\":\"'\"$PWD\"'\"}' | ~/.claude/hooks/notify.sh"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cat ~/.claude/rules/*.md"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); model=$(echo \"$input\" | jq -r '.model.display_name // \"Claude\"'); dir=$(echo \"$input\" | jq -r '.workspace.current_dir // \"~\"' | sed \"s|$HOME|~|\"); remaining=$(echo \"$input\" | jq -r '.context_window.remaining_percentage // empty'); style=$(echo \"$input\" | jq -r '.output_style.name // empty'); vim=$(echo \"$input\" | jq -r '.vim.mode // empty'); status=\"$model in $dir\"; [ -n \"$remaining\" ] && status=\"$status | Context: $remaining%\"; [ -n \"$style\" ] && status=\"$status | Style: $style\"; [ -n \"$vim\" ] && status=\"$status | [$vim]\"; echo \"$status\""
  },
  "enabledPlugins": {
    "ast-grep@ast-grep-marketplace": true,
    "feature-dev@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true
  },
  "teammateMode": "tmux",
  "effortLevel": "low"
}

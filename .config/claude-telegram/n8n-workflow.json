    {
      "parameters": {
        "jsCode": "// Access Telegram data from trigger\nconst telegramData = $input.first().json;\nconst message = telegramData.message;\nconst chatId = message.chat.id;\nconst messageId = message.message_id;\nconst text = message.text || '';\n\n// Whitelist check\nconst WHITELIST = ['6016705076'];\nif (!WHITELIST.includes(chatId.toString())) {\n  return [{\n    json: {\n      chatId,\n      messageId,\n      skipExecution: true,\n      isNewSession: false,\n      error: 'Unauthorized user'\n    }\n  }];\n}\n\n// Parse command\nlet command = '';\nlet commandType = 'ask';\nlet skipExecution = false;\nlet isNewSession = false;\n\nif (text.startsWith('/new')) {\n  // New session command\n  commandType = 'new';\n  isNewSession = true;\n  skipExecution = false;\n} else if (text.startsWith('/run ')) {\n  const task = text.substring(5).trim();\n  if (!task) {\n    skipExecution = true;\n  } else {\n    commandType = 'run';\n    command = `claude -p \"${task.replace(/\"/g, '\\\\\"')}\" --output-format text --allowedTools \"Read,Grep,Glob,Bash(git *)\"`;\n  }\n} else if (text.startsWith('/status')) {\n  commandType = 'status';\n  command = 'uptime && sysctl -n vm.loadavg';\n} else if (text.startsWith('/')) {\n  // Unknown command\n  skipExecution = true;\n} else {\n  // Default to ask (plain text message)\n  const question = text.trim();\n  if (!question) {\n    skipExecution = true;\n  } else {\n    commandType = 'ask';\n    command = `claude -p \"${question.replace(/\"/g, '\\\\\"')}\" --output-format text`;\n  }\n}\n\nreturn [{\n  json: {\n    chatId,\n    messageId,\n    command,\n    commandType,\n    skipExecution,\n    isNewSession\n  }\n}];"
      },
